<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IdeatApp"
        tools:targetApi="31">
        <activity
            android:name=".presentation.ui.PasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.IdeatApp" />
        <activity
            android:name=".presentation.ui.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.DataProfileActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.DetailHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".BotNavActivity"
            android:exported="false"
            android:label="@string/title_activity_bot_nav" />
        <activity
            android:name=".presentation.ui.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.FirstSessionActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.StartedPageActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.MainActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>